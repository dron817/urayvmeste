<div class="col-md-12 col-lg-6 col-xl-6 wow animated fadeInUp" data-wow-delay=".3s">
    <article class="single-blog-post">
        <div class="post-meta">
            <h2 class="subtitle">%name%</h2>
            <p>%desc%</p>
            <sub>
                <p>%phone%</p>
                <p>%email%</p>
            </sub>
            <aside>
                <a href="?hideHelper=%id%">
                    <i class="material-icons icon-round mdi mdi-eye-off"></i>
                </a>
                <a href="?delHelper=%id%">
                    <i class="material-icons icon-round mdi mdi-delete"></i>
                </a>
            </aside>
        </div>
    </article>
</div>