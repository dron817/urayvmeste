<!-- Single Article -->
<div class="col-md-6 col-lg-3 col-xl-3 wow animated fadeInUp" data-wow-delay=".3s">
    <article class="single-blog-post">
        <!-- Featured Image -->
        <div class="featured-image">
            <a href="#">
                <img src="img/orgs/%logo%" alt="">
            </a>
        </div>
        <!-- Post Meta -->
        <div class="post-meta">
            <!-- Title -->
            <h2 class="subtitle">%name%</h2>
            <p>%desc%</p>
            <p><b>%city%</b></p>
            <p>%cont%</p>
        </div>
    </article>
</div>